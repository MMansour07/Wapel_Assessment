        <div class="card-body px-0">
            @using (Html.BeginForm("New", "User", FormMethod.Post, new { @class = "form-horizontal form px-10", role = "form", @id = "kt_login_signup_form" }))
            {
                @Html.AntiForgeryToken()
                <div class="tab-content">
                    <!--begin::Tab-->
                    <div class="tab-pane show active px-7" id="kt_user_edit_tab_1" role="tabpanel">
                        <!--begin::Row-->
                        <div class="row">
                            <div class="col-xl-2"></div>
                            <div class="col-xl-7 my-2">
                                <div class="row">
                                    <div class="col-xl-12">
                                        <div class="form-group">
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <!--begin::Row-->
                                <div class="row">
                                    <div class="col-9">
                                        <h6 class=" text-dark font-weight-bold mb-10">Please fill in the required fields:</h6>
                                    </div>
                                </div>
                                <!--end::Row-->
                                <!--begin::Group-->
                                <div class="form-group row">
                                    <div class="col-9">
                                        <div class="image-input image-input-empty image-input-outline" id="kt_user_edit_avatar" style="background-image: url(/Content/imgs/blank.png)">
                                            <div class="image-input-wrapper"></div>
                                            <span class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="cancel" data-toggle="tooltip" title="" data-original-title="Cancel avatar">
                                                <i class="ki ki-bold-close icon-xs text-muted"></i>
                                            </span>

                                            <span class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="remove" data-toggle="tooltip" title="" data-original-title="Remove avatar">
                                                <i class="ki ki-bold-close icon-xs text-muted"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <!--end::Group-->
                                <!--begin::Group-->
                                <div class="form-group row">
                                    <div class="col-6">
                                        <label class="col-form-label text-lg-right text-left">First Name</label>
                                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control form-control-lg form-control-solid", @placeholder = "First Name", @name = "fname" })
                                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-6">
                                        <label class="col-form-label text-lg-right text-left">Last Name</label>
                                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control form-control-lg form-control-solid", @placeholder = "Last Name", @name = "lname" })
                                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <!--end::Group-->
                                <!--begin::Group-->
                                <div class="form-group row">
                                    <div class="col-6">
                                        <label class="col-form-label text-lg-right text-left">Company Name</label>
                                        @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control form-control-lg form-control-solid", @placeholder = "Company", @name = "company" })
                                        @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "text-danger" })
                                        <span class="form-text text-muted">If you want your invoices addressed to a company. Leave blank to use your full name.</span>
                                    </div>
                                    <div class="col-6">
                                        <label class="col-form-label text-lg-right text-left">Contact Phone</label>
                                        <div class="input-group input-group-lg input-group-solid">
                                            <div class="input-group-prepend"><span class="input-group-text"><i class="la la-phone"></i></span></div>
                                            @Html.TextBoxFor(model => model.Phone, new { @class = "form-control form-control-lg form-control-solid", @placeholder = "Phone", @name = "phone" })
                                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                        </div>
                                        <span class="form-text text-muted">We'll never share your email with anyone else.</span>
                                    </div>
                                </div>
                                <!--end::Group-->
                                <!--begin::Group-->


                                <div class="form-group row">
                                    <div class="col-7">
                                        <label class="col-form-label text-lg-right text-left">Role (No Validation Yet. you have to pick at least one.)</label>

                                        @Html.ListBoxFor(model => model.SelectedRoles, new SelectList(ViewBag?.Roles, "Id", "Name"), new { @class = "form-control form-control-lg form-control-solid select2", @id = "kt_select2_4", @name = "SelectedRoles", @multiple = "multiple" })
                                        @Html.ValidationMessageFor(model => model.Roles, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-5">
                                        <label class="col-form-label text-lg-right text-left">Department</label>

                                        @Html.DropDownListFor(model => model.DepartmentId, new SelectList(ViewBag?.Departments, "Id", "Title"), "Select One", new { @class = "form-control form-control-lg form-control-solid", @id = "kt_select2", @name = "Departments" })
                                        @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-6">
                                        <label class="col-form-labeltext-lg-right text-left">Manager</label>

                                        @Html.DropDownListFor(model => model.ManagerId, new SelectList(ViewBag?.Users, "Id", "FullName"), "Select One", new { @class = "form-control form-control-lg form-control-solid", @id = "kt_select3", @name = "Users" })
                                        @Html.ValidationMessageFor(model => model.ManagerId, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-6">
                                        <label class="col-form-label text-lg-right text-left">Email Address</label>

                                        <div class="input-group input-group-lg input-group-solid">
                                            <div class="input-group-prepend"><span class="input-group-text"><i class="la la-at"></i></span></div>
                                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control form-control-lg form-control-solid", @placeholder = "Email", @name = "email" })
                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <!--begin::Group-->
                                <div class="form-group row">
                                    <div class="col-6">
                                        <label class="col-form-label text-lg-right text-left">Password</label>
                                        @Html.PasswordFor(model => model.Password, new { @class = "form-control form-control-solid h-auto py-7 px-6 border-0 rounded-lg font-size-h6", @placeholder = "Password", @name = "password" })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-6">
                                        <label class="col-form-label text-lg-right text-left">Confirm Password</label>
                                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control form-control-solid h-auto py-7 px-6 border-0 rounded-lg font-size-h6", @placeholder = "Confirm Password", @name = "cpassword" })
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <!--end::Group-->

                                <div class="separator separator-solid"></div>
                                <!--begin::Items-->
                                <div class="d-flex align-items-center flex-wrap mt-8">
                                    <div class="my-lg-0  m-auto my-3">
                                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                                        <a href="@Url.Action("Index", "User")" type="reset" class="btn btn-secondary">Cancel</a>
                                    </div>
                                </div>
                                <!--begin::Items-->

                            </div>
                        </div>
                        <!--end::Row-->
                    </div>
                    <!--end::Tab-->
                </div>
            }
        </div>
    </div>
</div>


