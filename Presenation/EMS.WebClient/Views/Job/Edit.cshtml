    <!--begin::Card-->
    <div class="card card-custom gutter-b">
        <div class="card-header">
            <div class="card-title">
                <h3 class="card-label">New Job: Please fill out the required fileds.</h3>
            </div>
        </div>
        <!--begin::Form-->

        <form id="kt_job">
            @Html.AntiForgeryToken()
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-lg-6">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.Hidden("Id")
                    </div>
                    <script>
                        var jsObject = @Html.Raw(Json.Encode(Model?.Medias));
                        var CreatedDate = convertToJavaScriptDate('@Model.CreatedDate');
                    </script>
                </div>
                <div class="form-group row">
                    <label class="col-lg-1 col-form-label text-lg-left">Post Date:</label>
                    <div class="col-lg-5">
                        @Html.TextBoxFor(model => model.CreatedDate, new { @class = "form-control form-control-solid", @placeholder = "Enter Job Title", @readonly="readonly"})
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-lg-1 col-form-label text-lg-left">Job Title:</label>
                    <div class="col-lg-5">
                        @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @placeholder = "Enter Job Title" })
                    </div>
                    <label class="col-lg-1 col-form-label text-lg-left">Salary:</label>
                    <div class="col-lg-5">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">$</span>
                                <span class="input-group-text">0.00</span>
                            </div>
                            @Html.TextBoxFor(model => model.Salary, new { @class = "form-control", @placeholder = "Salary" })
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-1 col-form-label text-lg-left">Experience:</label>
                    <div class="col-lg-5">
                        @Html.TextBoxFor(model => model.Experience, new { @class = "form-control", @placeholder = "Enter Experience" })
                    </div>
                    <label class="col-lg-1 col-form-label text-lg-left">Vacancies:</label>
                    <div class="col-lg-5">
                        @Html.TextBoxFor(model => model.Vacancies, new { @class = "form-control", @placeholder = "Enter #Vacancies" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-1 col-form-label text-lg-left">Description:</label>
                    <div class="col-lg-5">
                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @placeholder = "Please enter job Description", @rows = "5" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-1 col-form-label text-lg-left">Job Videos:</label>
                    <div class="col-lg-11">
                        <div class="row">
                            <label class="col-lg-12 col-form-label font-weight-bold text-lg-left">Upload several videos where you explain in clear and simple way the offer so that candidates are interested in your job offer.</label>
                        </div>
                        <div class="row">
                            <div class="col-xl-6">
                                <div class="dropzone dropzone-multi" id="kt_dropzone_4">
                                    <div class="dropzone-panel mb-lg-0 mb-2">
                                        <a class="dropzone-select btn btn-light-primary font-weight-bold btn-sm">Attach files</a>
                                        @*<a class="dropzone-upload btn btn-light-primary font-weight-bold btn-sm">Upload All</a>*@
                                        <a class="dropzone-remove-all btn btn-light-primary font-weight-bold btn-sm">Remove All</a>
                                    </div>
                                    <div class="dropzone-items">
                                        <div class="dropzone-item" style="display:none">
                                            <div class="dropzone-file">
                                                <div class="dropzone-filename" title="some_image_file_name.jpg"><span data-dz-name>some_image_file_name.jpg</span> <strong>(<span data-dz-size>340kb</span>)</strong></div>
                                                <div class="dropzone-error" data-dz-errormessage></div>
                                            </div>
                                            <div class="dropzone-progress">
                                                <div class="progress">
                                                    <div class="progress-bar bg-primary" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="0" data-dz-uploadprogress></div>
                                                </div>
                                            </div>
                                            <div class="dropzone-toolbar">
                                                <span class="dropzone-delete" data-dz-remove><i class="flaticon2-cross"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <span class="form-text mt-1 text-warning">Max file size is 20 MB and max number of files is 3.</span>
                                <span class="text-danger mt-1 val-cnt" style="display: none">You must upload at least one video to proceed.</span>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-lg-12">
                        <button type="submit" class="btn btn-light-primary mr-2">Submit</button>
                        <a href="@Url.Action("Land", "User")" class="btn btn-primary">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
        <!--end::Form-->
    </div>
    <!--end::Card-->

</div>
<script src="~/Content/assets/js/uppy.bundle.js"></script>
